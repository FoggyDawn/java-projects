<?xml version="1.0"?>
<!DOCTYPE mxinfo PUBLIC "-//PHOENIX/Mx Info DTD Version 1.0//EN"
                  "http://jakarta.apache.org/avalon/dtds/phoenix/mxinfo_1_0.dtd">

<mxinfo>

    <topic name="SMTPServer" >

      <!-- attributes -->
      <attribute
        name="networkInterface"
        description="Returns the address if the network interface the socket is bound to"
        isWriteable="no"
        type="String"
      />
      <attribute
        name="port"
        description="Returns the port that the service is bound to"
        isWriteable="no"
        type="int"
      />
      <attribute
        name="socketType"
        description="Returns the server socket type, plain or SSL"
        isWriteable="no"
        type="String"
      />
      <attribute
        name="enabled"
        description="Returns flag indicating it this service is enabled"
        isWriteable="no"
        type="boolean"
      />

      <!-- operations -->

    </topic>

</mxinfo>
